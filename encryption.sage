    (p, q, n) = keyGen()
    m = b"Your heart's been aching but you're too shy to say it."
    c = encrypt(m, n)
    res = decrypt(c, p, q)
    if m == res:
        print("success")
        print(res)
    else:
        print(f"found : {res}")


